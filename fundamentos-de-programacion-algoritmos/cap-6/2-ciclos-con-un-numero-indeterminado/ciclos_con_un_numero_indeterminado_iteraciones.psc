Proceso ciclos_con_un_numero_indeterminado_iteraciones
	
	// Definir valiables
	Definir i Como Entero;
	
	// Inicializamos la variable
	i <- 0; 
	
	// Ejecutar la lógica
	Mientras (i <= 10) Hacer
		Escribir i;
		i <- i + 1;
	FinMientras
	
FinProceso
