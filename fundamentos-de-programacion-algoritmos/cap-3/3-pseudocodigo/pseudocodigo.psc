Proceso pseudocodigo
	
	// Definir variables
	Definir a, b, resultado Como Entero;
	
	// Asignamos variables 
	a <- 10;
	
	// Pedimos el valor
	Escribir "Defina el valor de b";
	Leer b;
	
	// Ejecutamos la operación
	resultado <- a+b;
	
	// Mostramos el resultado
	Escribir "El resultado de la operación es: ", resultado;
	
